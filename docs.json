{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Polymarket Exchange",
  "colors": {
    "primary": "#2E5CFF",
    "dark": "#2E5CFF",
    "light": "#2E5CFF"
  },
  "appearance": {
    "default": "light",
    "strict": false
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Welcome",
        "pages": ["index"]
      },
      {
        "tab": "Getting Started",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "getting-started/getting-access",
              "getting-started/rate-limits",
              "getting-started/connection-options",
              "getting-started/vpc-connection",
              "getting-started/common-pitfalls"
            ]
          }
        ]
      },
      {
        "tab": "REST API",
        "groups": [
          {
            "group": "Authentication",
            "openapi": {
              "source": "/api-reference/oapi-schemas/auth-schema.json",
              "directory": "api-reference"
            }
          },
          {
            "group": "Accounts",
            "openapi": {
              "source": "/api-reference/oapi-schemas/accounts-schema.json",
              "directory": "api-reference"
            }
          },
          {
            "group": "Orders",
            "openapi": {
              "source": "/api-reference/oapi-schemas/orders-schema.json",
              "directory": "api-reference"
            }
          },
          {
            "group": "Positions",
            "openapi": {
              "source": "/api-reference/oapi-schemas/positions-schema.json",
              "directory": "api-reference"
            }
          },
          {
            "group": "Market Data",
            "openapi": {
              "source": "/api-reference/oapi-schemas/marketdata-merged-schema.json",
              "directory": "api-reference"
            }
          },
          {
            "group": "Drop Copy",
            "openapi": {
              "source": "/api-reference/oapi-schemas/dropcopy-schema.json",
              "directory": "api-reference"
            }
          }
        ]
      },
      {
        "tab": "gRPC Streaming",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "streaming-endpoints/grpc-overview",
              "streaming-endpoints/getting-started",
              "streaming-endpoints/authentication"
            ]
          },
          {
            "group": "Streaming Services",
            "pages": [
              "streaming-endpoints/market-data-stream",
              "streaming-endpoints/order-stream"
            ]
          },
          {
            "group": "Reference",
            "pages": [
              "streaming-endpoints/proto-reference",
              "streaming-endpoints/error-handling"
            ]
          }
        ]
      },
      {
        "tab": "FIX API",
        "pages": [
          "/api-reference/fix-api/ep3-fix-overview",
          "/api-reference/fix-api/ep3-fix-component-definitions",
          "/api-reference/fix-api/ep3-fix-session-management",
          "/api-reference/fix-api/ep3-fix-order-entry-and-matching",
          "/api-reference/fix-api/ep3-fix-market-data",
          "/api-reference/fix-api/ep3-fix-api-reference-data",
          "/api-reference/fix-api/ep3-fix-appendix-a-fix-data-types"
        ]
      },
      {
        "tab": "Changelog",
        "pages": ["changelog"]
      }
    ],
    "global": {}
  },
  "favicon": {
    "dark": "/logo/favicon.png",
    "light": "/logo/favicon.png"
  },
  "logo": {
    "light": "/logo/logo-black-US.png",
    "dark": "/logo/logo-white-US.png"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@qcex.com"
      }
    ]
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  }
