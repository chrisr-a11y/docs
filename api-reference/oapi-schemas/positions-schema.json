              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/v1beta1GetAccountBalanceResponse"
                }
              }
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/rpcStatus"
                }
              }
            }
          }
        }
      }
    },
    "/v1beta1/list_account_balances": {
      "post": {
        "tags": ["PositionAPI"],
        "summary": "List Account Balances",
        "description": "Lists the currency balances in an account.",
        "operationId": "PositionAPI_ListAccountBalances",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/v1beta1ListAccountBalancesRequest"
